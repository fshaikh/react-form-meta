{
  "name": "@reversecurrent/formrenderer",
  "version": "1.0.0",
  "description": "A simple React component capable of building HTML forms based on JSON meta schema.",
  "private": false,
  "dependencies": {
    "bootstrap": "^4.1.3",
    "prop-types": "^15.6.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-lib": "rimraf dist && cross-env NODE_ENV=production && npm run build-babel && npm run packagejson  && npm run readme",
    "build-babel": "babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "build-prod": "npm run build-lib && rimraf build && webpack --config webpack.config.prod.js --progress && npm run packagejson",
    "test": "react-scripts test --env=jsdom",
    "publish": "npm publish --access public",
    "packagejson": "cpx package*.json ./build",
    "readme": "cpx README.md ./build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "webpack-combine-loaders": "^2.0.4"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "author": "Furqan Shaikh <furqan_shaikh_1999@hotmail.com>",
  "keywords": [
    "react",
    "form"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fshaikh/react-form-meta.git"
  }
}
